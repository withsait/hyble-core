}

model Ticket {
  id              String          @id @default(cuid())
  referenceNo     String          @unique // TKT-20250101-XXXX

  userId          String
  organizationId  String?

  subject         String
  category        TicketCategory
  status          TicketStatus    @default(OPEN)
  priority        TicketPriority  @default(NORMAL)

